{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "id":"#simulation",
    "required": ["name", "steps"],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1
        },
        "description": {
            "type": "string"
        },
        "active": {
            "type": "string"
        },
        "disabled": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "status": {
            "enum": ["editing", "running", "data"]
        },
        "metadata": {
            "type": "object"
        },
        "steps": {
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "$ref": "#/step"
                }
            }
        },
        "projectId": {

        },
        "folderId": {

        },
        "access": {

        },
        "userId": {

        },
        "_id": {

        },
        "created": {

        },
        "updated": {

        }
    },
    "definitions": {
        "share": {
            "type": "object",
            "properties": {
                "users": {
                    "$ref": "#/arrayOfIds"
                },
                "groups": {
                    "$ref": "#/arrayOfIds"
                },
                "level": {
                    "type": "number",
                    "minimum": -1,
                    "maximum": 2
                },
                "flags": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minItems": 0
                    }
                }
            },
            "additionalProperties": false
        }
    }
}
