{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "id":"#project",
    "required": ["name", "type", "steps"],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "type": {
            "type": "string"
        },
        "steps": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "metadata": {
            "type": "object"
        },
        "folderId": {

        },
        "access": {

        },
        "userId": {

        },
        "_id": {

        },
        "created": {

        },
        "updated": {

        }
    },
    "definitions": {
        "share": {
            "type": "object",
            "properties": {
                "users": {
                    "$ref": "#/arrayOfIds"
                },
                "groups": {
                    "$ref": "#/arrayOfIds"
                },
                "level": {
                    "type": "number",
                    "minimum": -1,
                    "maximum": 2
                },
                "flags": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minItems": 0
                    }
                }
            },
            "additionalProperties": false
        }
    }
}
